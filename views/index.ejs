<html>
    <%- include("./partials/header.ejs") %>
    
    <body>
        <%- include("./partials/nav.ejs") %>
        <div class="blog content">
            <h2>All Blogs</h2>
            <% if (blogs.length > 0) { %>
                <% blogs.forEach((blog) => {%>
                    <a class="blogs" href="/blogs/<%= blog._id %>">
                        <h3 class="blogs">
                            <%= blog.title %>
                        </h3>
                        <p class="blogs">
                            <%= blog.snippet %>
                        </p>
                    </a>    
                <% }) %>
            <% }  else { %>
                <p>There are no blogs to display.</p>
            <% } %>
        </div>
    </body>
    <%- include("./partials/footer.ejs") %>
</html>
